{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm install (web)",
      "type": "shell",
      "command": "npm ci",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "npm dev (web)",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 0
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^",
          "endsPattern": "Local:\\s+https?://localhost:3000"
        }
      },
      "dependsOn": "npm install (web)"
    }
  ]
}
